<table>
 <tr>
  <th>login:</th>
  <td><%=h @user.login -%></td>
 </tr>
 <tr>
  <th>name:</th>
  <td><%=h @user.name -%></td>
 </tr>
 <tr>
  <th>email:</th>
  <td><%=h @user.email -%></td>
 </tr>
 <tr>
  <th>created:</th>
  <td><%=h @user.created_at -%></td>
 </tr>
 <tr>
  <th>last updated:</th>
  <td><%=h @user.updated_at -%></td>
 </tr>
</table>

<%= link_to 'Edit', edit_user_path(@user) -%> | <%= link_to 'Remove', @user, :confirm => "Are you sure you want to delete user '#{@user.login}'?", :method => :delete -%> | <%= link_to 'Back', users_path -%>
